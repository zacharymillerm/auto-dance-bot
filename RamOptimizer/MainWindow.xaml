<Window x:Class="RamOptimizer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RamOptimizer"
        mc:Ignorable="d"
        Title="RAM Optimizer" Height="350" Width="250" ResizeMode="CanMinimize" WindowStyle="SingleBorderWindow" Icon="dance.ico" Topmost="True" WindowStartupLocation="CenterScreen">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <!-- Row 0: Title -->
            <RowDefinition Height="Auto"/>
            <!-- Row 1: Checkboxes -->
            <RowDefinition Height="Auto"/>
            <!-- Row 2: Time Range Input -->
            <RowDefinition Height="Auto"/>
            <!-- Row 3: Start/Stop Button -->
            <RowDefinition Height="Auto"/>
            <!-- Row 4: Theme Toggle -->
        </Grid.RowDefinitions>

        <!-- Row 0: Title -->
        <TextBlock Grid.Row="0" Text="RAM Optimizer" FontSize="16" FontWeight="Bold" 
                   HorizontalAlignment="Center" Margin="0,10,0,10"/>

        <!-- Row 1: Checkboxes -->
        <StackPanel Grid.Row="1" Margin="0,0,0,15">
            <CheckBox x:Name="chkKeyboard" Content="CPU-K Optimize" 
                      Margin="0,0,0,8" FontSize="12"/>
            <CheckBox x:Name="chkMouse" Content="TMP-S Clean" 
                      Margin="0,0,0,8" FontSize="12"/>
            <CheckBox x:Name="chkMouseMove" Content="FAN-M Boost" 
                      Margin="0,0,0,8" FontSize="12"/>
            <CheckBox x:Name="chkSuperClean" Content="Super Clean" 
                      FontSize="12" Checked="ChkSuperClean_Changed" Unchecked="ChkSuperClean_Changed"/>
        </StackPanel>

        <!-- Row 2: Time Range Input -->
        <StackPanel Grid.Row="2" Margin="0,0,0,15">
            <TextBlock Text="Time Range (seconds):" FontSize="12" Margin="0,0,0,5"/>
            <TextBox x:Name="txtTimeRange" Text="20" FontSize="12" Padding="5,3"
                     PreviewTextInput="TxtTimeRange_PreviewTextInput"/>
        </StackPanel>

        <!-- Row 3: Start/Stop Button -->
        <Button Grid.Row="3" x:Name="btnStartStop" Content="Start" 
                FontSize="14" FontWeight="Bold" Height="25" Margin="0,0,0,10"
                Click="BtnStartStop_Click" Background="#4CAF50" Foreground="White"/>

        <!-- Row 4: Theme Toggle -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Theme:" VerticalAlignment="Center" Margin="0,0,10,0" FontSize="12"/>
            <RadioButton x:Name="rbLightTheme" Content="Light" IsChecked="True" 
                         Margin="0,0,10,0" FontSize="12" Checked="ThemeRadioButton_Checked"/>
            <RadioButton x:Name="rbDarkTheme" Content="Dark" 
                         FontSize="12" Checked="ThemeRadioButton_Checked"/>
        </StackPanel>
    </Grid>
</Window>
